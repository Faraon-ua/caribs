@model Caribs.Models.SoftRegistrationViewModel
@{
    Layout = null;
}
<html>
<head>
    <title>Автокликер Регистрация</title>
    <link href="~/Content/autoclickreg.css" rel="stylesheet" />
    <link href="~/Content/OnOff.css" rel="stylesheet" />
    <link href="~/Content/StyledSelect.css" rel="stylesheet" />
    <link href="~/Content/loader.css" rel="stylesheet" />
</head>
<body class="main-section">
    <!-- multistep form -->
    <div id="msform">
        <!-- progressbar -->
        <ul id="progressbar">
            <li class="active">Установки аккаунта</li>
            <li>Выбор услуг</li>
            <li>Оплата</li>
        </ul>
        <!-- fieldsets -->
        <fieldset>
            <form id="accountRegForm">
                <h2 class="fs-title">Установки аккаунта</h2>
                <h3 class="fs-subtitle">Шаг 1 из 3</h3>
                <input type="text" name="login" id="login" placeholder="Caribbeanbridge Login" />
                <input type="password" name="password" id="password" placeholder="Caribbeanbridge Password" />
                <input type="text" name="email" id="email" required placeholder="Email для уведомлений" />
                <input type="text" name="phone" id="phone" required placeholder="Телефон для уведомлений" />
                <p>* Обычный пароль от вашего аккаунта не дает доступа ни к чему, кроме размещения рекламы; финансовый вы не указываете</p>
                <input type="submit" class="action-button" value="Далее" id="next_step1" />
                <div id="spinner" class="spinner" style="display:none">
                    <div class="rect1"></div>
                    <div class="rect2"></div>
                    <div class="rect3"></div>
                    <div class="rect4"></div>
                    <div class="rect5"></div>
                </div>
            </form>
            <input type="button" name="next" class="next action-button" value="Далее" style="display: none;" />
        </fieldset>
        <fieldset id="servicesChoise">
            <h2 class="fs-title">Выбор услуг</h2>
            <h3 class="fs-subtitle">Шаг 2 из 3</h3>
            <table class="width100perc">
                <tr class="spaceUnder">
                    <td>
                        <label>CaribbeanBridge автокликер</label>
                    </td>
                    <td>
                        <div class="onoffswitch">
                            <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="autoclickerSwitch" checked disabled>
                            <label class="onoffswitch-label" for="autoclickerSwitch">
                                <span class="onoffswitch-inner"></span>
                                <span class="onoffswitch-switch"></span>
                            </label>
                        </div>
                    </td>
                </tr>
                <tr class="spaceUnder">
                    <td>
                        <label>Email оповещения</label>
                    </td>
                    <td>
                        <div class="onoffswitch">
                            <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="emailNot" checked disabled>
                            <label class="onoffswitch-label" for="emailNot">
                                <span class="onoffswitch-inner"></span>
                                <span class="onoffswitch-switch"></span>
                            </label>
                        </div>
                    </td>
                </tr>
                <tr class="spaceUnder">
                    <td>
                        <label>SMS оповещения</label>
                    </td>
                    <td>
                        <div class="onoffswitch">
                            <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="smsNot" checked disabled>
                            <label class="onoffswitch-label" for="smsNot">
                                <span class="onoffswitch-inner"></span>
                                <span class="onoffswitch-switch"></span>
                            </label>
                        </div>
                    </td>
                </tr>
                <tr class="spaceUnder">
                    <td>
                        <label>Срок подписки</label>
                    </td>
                    <td>
                        <div class="styled-select green rounded">
                            @Html.DropDownList("subscriptionFor", (List<SelectListItem>)ViewBag.SubscriptionFor)
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Итого</label>
                    </td>
                    <td>
                        <div id="payAmount" style="font-weight: bold; text-align: right; font-size: 1.5em;  padding-right: 25px;">
                            2$
                        </div>
                    </td>
                </tr>
            </table>
            <br />
            <br />
            <input type="button" name="previous" class="previous action-button" value="Назад" />
            <input id="next_step2" type="button" name="next" class="next action-button" value="Далее" />
        </fieldset>
        <fieldset>
            <h2 class="fs-title">Оплата</h2>
            <h3 class="fs-subtitle">Шаг 1 из 3</h3>
            <iframe id="yandexPaymentFrame" frameborder="0" allowtransparency="true" scrolling="no"
                    @*                        src="https://money.yandex.ru/embed/shop.xml?account=410013057415590&quickpay=shop&payment-type-choice=on&mobile-payment-type-choice=on&writer=seller&targets=%D0%90%D0%B2%D1%82%D0%BE%D0%BC%D0%B0%D1%82%D0%B8%D0%B7%D0%B0%D1%86%D0%B8%D1%8F+%D1%80%D0%B0%D0%B7%D0%BC%D0%B5%D1%89%D0%B5%D0%BD%D0%B8%D1%8F+%D1%80%D0%B5%D0%BA%D0%BB%D0%B0%D0%BC%D1%8B+%D0%B2+CaribbeanBridge&targets-hint=&default-sum={default-sum}&button-text=01&successURL=http%3A%2F%2Fpromobiz.info%2FSoft%2FPaymentSuccess&label={label}"*@
                    src="https://money.yandex.ru/embed/shop.xml?account=410013672501488&quickpay=shop&payment-type-choice=on&mobile-payment-type-choice=on&writer=seller&targets=%D0%90%D0%B2%D1%82%D0%BE%D0%BC%D0%B0%D1%82%D0%B8%D0%B7%D0%B0%D1%86%D0%B8%D1%8F+%D1%80%D0%B0%D0%B7%D0%BC%D0%B5%D1%89%D0%B5%D0%BD%D0%B8%D1%8F+%D1%80%D0%B5%D0%BA%D0%BB%D0%B0%D0%BC%D1%8B+%D0%B2+CaribbeanBridge&targets-hint=&default-sum={default-sum}&button-text=01&successURL=http%3A%2F%2Fpromobiz.info%2FSoft%2FPaymentSuccess&label={label}"
                    width="450"
                    height="213"></iframe>
            <p>
                * Если вы укажете и проплатите меньшую сумму, то после оплаты ваша подписка будет перерасчитана на соответствующее количество месяцев
            </p>
            <input type="button" name="previous" class="previous action-button" value="Назад" />
        </fieldset>
    </div>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="~/Scripts/jquery.maskedinput.min.js"></script>
    <script src="//thecodeplayer.com/uploads/js/jquery.easing.min.js" type="text/javascript"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery-form-validator/2.3.20/jquery.form-validator.min.js"></script>
    <script src="~/Scripts/stringExtensions.js"></script>
    <script type="text/javascript">
        var currencyRates = @Html.Raw(Json.Encode(Model.CurrencyRate));
    </script>
    <script src="~/Scripts/autoclickreg.js"></script>
</body>
</html>
